	</control>
	<control type="image">
	<left>430</left>
	<top>65</top>
	<width>160</width>
	<height>584</height>
	<texture>grey.png</texture>
	<colordiffuse>20FFFFFF</colordiffuse>
	</control>
	<control type="button" id="562">
	<include>InvisibleButton</include>
	<onright>9920</onright>
	<onleft>51</onleft>
	<onup>51</onup>
	<ondown>51</ondown>
	</control>
