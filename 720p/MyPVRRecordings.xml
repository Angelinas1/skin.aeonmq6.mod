	<animation effect="slide" time="1000" start="600,0" end="0,0" tween="cubic" easing="out">Visible</animation>
	<animation effect="fade" time="400" start="100" end="0">Hidden</animation>
	<visible>Control.IsVisible(50)</visible>
	<control type="image">
	<left>-29</left>
	<top>-70</top>
