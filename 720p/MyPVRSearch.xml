<window><!-- Aeon MQ 6 -->
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views>50</views>
	<onunload condition="Skin.HasSetting(kioskcode)">Skin.Reset($INFO[skin.string(custom_code)])</onunload>
	<controls>
	<control type="multiimage"><!-- Fanart -->
	<include>WindowBG</include>
	<imagepath background="true">$VAR[value_menutheme_livetv]</imagepath>
	</control>
	<control type="group"><!-- Visualizacao de fundo -->
	<animation effect="fade" reversible="true" time="300">VisibleChange</animation>
	<control type="image">
	<left>0</left>
	<top>0</top>
	<width>1280</width>
	<height>720</height>
	<texture>black.png</texture>
	<colordiffuse>C3FFFFFF</colordiffuse>
	<include>Animation_Fade</include>
	<visible>Player.HasMedia</visible>
	</control>
	<control type="videowindow">
	<left>0</left>
	<top>0</top>
	<width>1280</width>
	<height>720</height>
	<visible>Player.HasVideo</visible>
	<animation effect="slide" start="0,0" end="-2000,0" time="0">WindowClose</animation>
	</control>
	<control type="visualisation">
	<left>0</left>
	<top>0</top>
	<width>1280</width>
	<height>720</height>
	<visible>Player.HasAudio</visible>
	<animation effect="slide" start="0,0" end="-2000,0" time="0">WindowClose</animation>
	</control>
	</control>

	<control type="group"><!-- default group -->
	<include>Animation_Window</include>
	<visible>![Window.IsActive(PVRGuideInfo) | Window.IsActive(PVRRecordingInfo) | Window.IsActive(PVRGuideSearch) | Window.IsActive(PVRTimerSetting)]</visible>

	<control type="button" id="9900"><!-- to menu/kiosk condition -->
	<include>InvisibleButton</include>
	<onfocus condition="![Skin.HasSetting(kiosk) | Skin.HasSetting(kiosksmart) + !SubString(skin.string(codestep),step3)]">SetFocus(9000)</onfocus>
	<onfocus condition="Skin.HasSetting(kiosksmart) + !SubString(skin.string(codestep),step3)">SetFocus(9100)</onfocus>
	</control>
	<control type="button" id="9920"><!-- hidden colection/view fanart -->
	<include>InvisibleButton</include>
	<onleft>SetFocus(50)</onleft>
	<onright>SetFocus(50)</onright>
	<onup>SetFocus(50)</onup>
	<ondown>SetFocus(50)</ondown>
	</control>

	<control type="group">
	<animation effect="fade" reversible="true" time="300">VisibleChange</animation>
	<visible>Control.IsVisible(50)</visible>
	<include>EPGMenu</include>
	<control type="image">
	<left>240</left>
	<top>131</top>
	<width>240</width>
	<height>439</height>
	<texture>grey.png</texture>
	<colordiffuse>20FFFFFF</colordiffuse>
	</control>
	<control type="image">
	<left>1160</left>
	<top>131</top>
	<width>70</width>
	<height>439</height>
	<texture>grey.png</texture>
	<colordiffuse>20FFFFFF</colordiffuse>
	</control>
	<control type="panel" id="50">
	<left>0</left>
	<top>130</top>
	<width>1280</width>
	<height>440</height>
	<onup>50</onup>
	<ondown>50</ondown>
	<onleft>9900</onleft>
	<onright>77</onright>
	<pagecontrol>77</pagecontrol>
	<scrolltime>350</scrolltime>
	<itemlayout  height="40" width="1100">
	<control type="label">
	<include>SettingsLabel</include>
	<label>$INFO[ListItem.ChannelName]</label>
	</control>
	<control type="image">
	<left>0</left>
	<top>0</top>
	<width>240</width>
	<height>3</height>
	<texture>divider.png</texture>
	<colordiffuse>90FFFFFF</colordiffuse>
	</control>
	<control type="image">
	<left>240</left>
	<top>1</top>
	<width>1040</width>
	<height>38</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>50FFFAF0</colordiffuse>
	<texture>settings_button_focus.png</texture>
	</control>
	<control type="label">
	<left>288</left>
	<top>0</top>
	<width>200</width>
	<height>40</height>
	<align>center</align>
	<aligny>center</aligny>
	<font>Font_20</font>
	<include>listcolor</include>
	<label>$INFO[ListItem.StartDate] $INFO[ListItem.StartTime]</label>
	</control>
	<control type="label">
	<left>520</left>
	<top>1</top>
	<width>590</width>
	<height>38</height>
	<align>left</align>
	<aligny>center</aligny>
	<font>Font_18A</font>
	<include>listcolor</include>
	<info>ListItem.Label</info>
	</control>
	<control type="image">
	<left>1180</left>
	<top>10</top>
	<width>30</width>
	<height>20</height>
	<texture>pvr_isrecording.png</texture>
	<visible>ListItem.IsRecording</visible>
	</control>
	<control type="image">
	<left>1180</left>
	<top>10</top>
	<width>20</width>
	<height>20</height>
	<texture>pvr_hastimer.png</texture>
	<visible>ListItem.HasTimer + ![ListItem.IsRecording]</visible>
	</control>
	</itemlayout>
	<focusedlayout height="40" width="1100">
	<control type="image">
	<left>0</left>
	<top>0</top>
	<width>238</width>
	<height>40</height>
	<texture>settings_button.png</texture>
	<animation effect="fade" start="100" end="50" time="50" condition="!Control.Hasfocus(50)">conditional</animation>
	</control>
	<control type="image">
	<left>240</left>
	<top>1</top>
	<width>1040</width>
	<height>38</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FFFFFAF0</colordiffuse>
	<texture>settings_button_focus.png</texture>
	</control>
	<control type="label">
	<include>SettingsLabelFocus</include>
	<label>$INFO[ListItem.ChannelName]</label>
	</control>
	<control type="label">
	<left>288</left>
	<top>0</top>
	<width>200</width>
	<height>40</height>
	<align>center</align>
	<aligny>center</aligny>
	<font>Font_20</font>
	<textcolor>$VAR[value_headercolor]</textcolor>
	<label>$INFO[ListItem.StartDate] $INFO[ListItem.StartTime]</label>
	</control>
	<control type="label">
	<left>520</left>
	<top>1</top>
	<width>590</width>
	<height>38</height>
	<align>left</align>
	<aligny>center</aligny>
	<font>Font_18A</font>
	<include>listcolorfocus</include>
	<info>ListItem.Label</info>
	</control>
	<control type="image">
	<left>1180</left>
	<top>10</top>
	<width>30</width>
	<height>20</height>
	<texture>pvr_isrecording.png</texture>
	<visible>ListItem.IsRecording</visible>
	</control>
	<control type="image">
	<left>1180</left>
	<top>10</top>
	<width>20</width>
	<height>20</height>
	<texture>pvr_hastimer.png</texture>
	<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
	</control>
	</focusedlayout>
	</control>
	<control type="scrollbar" id="77">
	<include>ScrollBar_Vertical</include>
	<left>1245</left>
	<top>135</top>
	<height>430</height>
	<onleft>50</onleft>
	<onright>36</onright>
	<ondown>77</ondown>
	<onup>77</onup>
	</control>
	<include>PVRCommonInfo</include>
	</control>
	
	<!-- Furniture -->
	<include>TouchScreen</include>
	<include condition="Skin.HasSetting(pvrdate)">TopDate</include>
	<include>TopMenu_PVR</include>
	<include>BGBlack</include>
	</control>
	</controls>
	</window>
